<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/dark_title</item>
        <item name="colorPrimaryDark">@color/dark_title</item>
        <item name="colorAccent">@color/dark_background</item>

        <item name="android:textColor">@color/dark_title</item>
        <item name="android:textColorPrimary">@color/dark_subtitle</item>
        <item name="android:textColorSecondary">@color/dark_description</item>
        <item name="android:textColorLink">@color/dark_title</item>

        <item name="android:colorEdgeEffect">@color/dark_title</item>

        <item name="android:buttonTint">@color/icon_color</item>

        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="actionModeBackground">@color/dark_background</item>

        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:font" tools:targetApi="26">@font/work_sans</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowBackground">@color/dark_background</item>

        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowHideAnimation">@anim/exit_anim</item>

        <item name="android:windowExitAnimation">@anim/exit_anim</item>
        <item name="android:windowShowAnimation">@anim/enter_anim</item>

        <item name="bottomSheetDialogTheme">@style/bottomSheetDialogTheme</item>

        <item name="floatingActionButtonStyle">@style/fabStyle</item>

        <item name="bottomAppBarStyle">@style/bottomBarStyle</item>

        <item name="materialCardViewStyle">@style/cardStyle</item>

    </style>

    <style name="emptyText">
        <item name="android:textColor">@color/empty_color_dark</item>
    </style>

    <style name="emptyIcon">
        <item name="android:tint">@color/empty_color_dark</item>
    </style>

    <style name="cardStyle" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/dark_background</item>
    </style>

    <style name="bottomBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/bottom_bar_dark</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">@color/fab_icon</item>
    </style>

    <style name="titleColor">
        <item name="android:textColor">@color/dark_title</item>
    </style>

    <style name="subtitleColor">
        <item name="android:textColor">@color/dark_subtitle</item>
    </style>

    <style name="descriptionColor">
        <item name="android:textColor">@color/dark_description</item>
    </style>

    <style name="timeColor">
        <item name="android:textColor">@color/dark_time</item>
    </style>

    <style name="borderStyle">
        <item name="android:background">@drawable/border_dark</item>
    </style>

    <style name="searchStyle">
        <item name="android:background">@drawable/search_input_background_dark</item>
    </style>

    <style name="bottomSheetDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/customBottomSheetStyle</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="customBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="inputBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxStrokeColor">@drawable/box_stroke_color</item>
        <item name="android:textColorHint">@color/dark_description</item>
        <item name="hintTextColor">@color/dark_description</item>
    </style>

    <style name="loginInput">
        <item name="android:textColor">@color/dark_description</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/dark_description</item>
    </style>

</resources>
